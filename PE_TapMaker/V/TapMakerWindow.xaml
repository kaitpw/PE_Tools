<Window x:Class="PE_TapMaker.V.TapMakerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tap Maker - Choose Tap Size" Height="320" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Selected Face Info -->
        <TextBlock Grid.Row="0" 
                   Text="Selected Duct Face:"
                   Margin="0,0,0,5"
                   FontWeight="Bold"/>
        
        <TextBox Grid.Row="1" 
                 Text="{Binding SelectedFaceInfo, Mode=OneWay}"
                 IsReadOnly="True"
                 Margin="0,0,0,20"
                 Background="LightGray"/>

        <!-- Tap Size Selection -->
        <GroupBox Grid.Row="2" Header="Tap Size Selection" Margin="0,0,0,20">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                           Text="Select tap size (inches):"
                           Margin="0,0,0,10"/>
                
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding AvailableTapSizes}"
                         SelectedItem="{Binding SelectedTapSize}"
                         DisplayMemberPath="DisplayName"
                         SelectionMode="Single"
                         Height="150"/>
            </Grid>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Create Tap"
                    Command="{Binding CreateTapCommand}"
                    Width="100"
                    Height="30"
                    Margin="0,0,10,0"
                    IsDefault="True"/>
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="100"
                    Height="30"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
