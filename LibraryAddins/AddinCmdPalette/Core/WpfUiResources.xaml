<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Custom Shadcn-inspired dark palette colors (kept for backward compatibility) -->
    <SolidColorBrush x:Key="BackgroundFillColorPrimaryBrush" Color="#18181B" />
    <SolidColorBrush x:Key="BackgroundFillColorSecondaryBrush" Color="#1F1F23" />
    <SolidColorBrush x:Key="BackgroundFillColorTertiaryBrush" Color="#27272A" />
    <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#FAFAFA" />
    <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="#A1A1AA" />
    <SolidColorBrush x:Key="TextFillColorTertiaryBrush" Color="#71717A" />
    <SolidColorBrush x:Key="ControlFillColorDefaultBrush" Color="#27272A" />
    <SolidColorBrush x:Key="ControlStrokeColorDefaultBrush" Color="#3F3F46" />

    <!-- WPF-UI Theme Color Overrides (Shadcn-inspired dark palette) -->
    <!-- Background colors -->
    <Color x:Key="SystemFillColorAttentionBackground">#27272A</Color>
    <Color x:Key="SystemFillColorAttentionBackgroundDisabled">#1F1F23</Color>
    <Color x:Key="SystemFillColorCardBackground">#18181B</Color>
    <Color x:Key="SystemFillColorControlBackground">#27272A</Color>
    <Color x:Key="SystemFillColorControlBackgroundDisabled">#1F1F23</Color>
    <Color x:Key="SystemFillColorControlAlt">#1F1F23</Color>
    <Color x:Key="SystemFillColorSubtleBackground">#1F1F23</Color>
    <Color x:Key="SystemFillColorTransparentBackground">#18181B</Color>
    
    <!-- Text colors -->
    <Color x:Key="SystemControlForegroundBaseHigh">#FAFAFA</Color>
    <Color x:Key="SystemControlForegroundBaseMedium">#A1A1AA</Color>
    <Color x:Key="SystemControlForegroundBaseLow">#71717A</Color>
    <Color x:Key="SystemControlForegroundChromeBlackMediumLow">#A1A1AA</Color>
    
    <!-- Border/Stroke colors -->
    <Color x:Key="SystemControlStrokeBaseDefault">#3F3F46</Color>
    <Color x:Key="SystemControlStrokeBaseMedium">#3F3F46</Color>
    
    <!-- Accent color -->
    <Color x:Key="SystemAccentColor">#3F3F46</Color>
    
    <!-- Selection/Hover colors -->
    <SolidColorBrush x:Key="SystemControlHighlightListLowBrush" Color="#27272A" />
    <SolidColorBrush x:Key="SystemControlHighlightListMediumBrush" Color="#27272A" />
</ResourceDictionary>
