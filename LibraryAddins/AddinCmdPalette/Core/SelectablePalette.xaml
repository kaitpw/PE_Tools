<Window x:Class="AddinCmdPalette.Core.SelectablePalette"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AddinCmdPalette.Core"
        Title="Palette"
        Width="600"
        Height="400"
        MinWidth="500"
        MinHeight="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Modern palette styling -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="#2D2D30" />
            <Setter Property="Foreground" Value="#CCCCCC" />
            <Setter Property="CaretBrush" Value="#CCCCCC" />
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="#3C3C3C" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ItemListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="#252526" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True" />
            <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling" />
            <Setter Property="ScrollViewer.CanContentScroll" Value="True" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style x:Key="ItemListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#CCCCCC" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#094771" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2D2E" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StatusBarStyle" TargetType="Border">
            <Setter Property="Background" Value="#1E1E1E" />
            <Setter Property="BorderThickness" Value="0,1,0,0" />
            <Setter Property="BorderBrush" Value="#3C3C3C" />
        </Style>

        <!-- Visibility converter for optional fields -->
        <local:VisibilityConverter x:Key="VisibilityConverter" />
    </Window.Resources>

    <!-- Main container with drop shadow -->
    <Border Background="#2D2D30"
            BorderBrush="#3C3C3C"
            BorderThickness="1"
            CornerRadius="6">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                              Direction="270"
                              ShadowDepth="4"
                              BlurRadius="16"
                              Opacity="0.6" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Search Box -->
            <TextBox x:Name="SearchTextBox"
                     Grid.Row="0"
                     Style="{StaticResource SearchBoxStyle}"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.InputBindings>
                    <KeyBinding Key="Down" Command="{Binding MoveSelectionDownCommand}" />
                    <KeyBinding Key="Up" Command="{Binding MoveSelectionUpCommand}" />
                </TextBox.InputBindings>
            </TextBox>

            <!-- Item List -->
            <ListBox x:Name="ItemListBox"
                     Grid.Row="1"
                     Style="{StaticResource ItemListBoxStyle}"
                     ItemContainerStyle="{StaticResource ItemListItemStyle}"
                     ItemsSource="{Binding FilteredItems}"
                     SelectedItem="{Binding SelectedItem}"
                     SelectedIndex="{Binding SelectedIndex}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid ToolTip="{Binding TooltipText}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Icon -->
                            <Image Grid.Column="0"
                                   Source="{Binding Icon}"
                                   Width="20"
                                   Height="20"
                                   Margin="0,0,12,0"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding Icon, Converter={StaticResource VisibilityConverter}}" />

                            <!-- Primary and Secondary Text -->
                            <StackPanel Grid.Column="1" Orientation="Vertical">
                                <TextBlock Text="{Binding PrimaryText}"
                                           FontWeight="Medium"
                                           FontSize="14" />
                                <TextBlock Text="{Binding SecondaryText}"
                                           FontSize="11"
                                           Opacity="0.6"
                                           Margin="0,2,0,0"
                                           Visibility="{Binding SecondaryText, Converter={StaticResource VisibilityConverter}}" />
                            </StackPanel>

                            <!-- Pill Text -->
                            <TextBlock Grid.Column="2"
                                       Text="{Binding PillText}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="#4EC9B0"
                                       Background="#1E1E1E"
                                       Padding="4,2"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding PillText, Converter={StaticResource VisibilityConverter}}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Status Bar -->
            <Border Grid.Row="2" Style="{StaticResource StatusBarStyle}">
                <Grid Margin="12,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal">
                        <TextBlock Text="{Binding FilteredItems.Count, StringFormat=\{0\} items}"
                                   Foreground="#888888"
                                   FontSize="11"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0" />
                        <TextBlock Text="↑↓ Navigate • Click/Enter Execute • Esc Close"
                                   Foreground="#666666"
                                   FontSize="11"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>

