<UserControl x:Class="AddinPaletteSuite.Core.Ui.SelectableListBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:AddinPaletteSuite.Core.Ui">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="WpfUiResources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <local:VisibilityConverter x:Key="VisibilityConverter" />

            <!-- ScrollViewer Style with WPF.UI DynamicScrollBar -->
            <Style x:Key="CustomScrollViewerStyle" TargetType="ScrollViewer">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ScrollViewer">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <ScrollContentPresenter Grid.Column="0"
                                                        Content="{TemplateBinding Content}"
                                                        ContentTemplate="{TemplateBinding ContentTemplate}"
                                                        CanContentScroll="{TemplateBinding CanContentScroll}" />

                                <ui:DynamicScrollBar x:Name="PART_VerticalScrollBar"
                                                     Grid.Column="1"
                                                     Orientation="Vertical"
                                                     ViewportSize="{TemplateBinding ViewportHeight}"
                                                     Maximum="{TemplateBinding ScrollableHeight}"
                                                     Value="{Binding VerticalOffset, RelativeSource={RelativeSource TemplatedParent}, Mode=OneWay}"
                                                     Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                                     Cursor="Arrow" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ListBoxItem Style -->
            <Style x:Key="PaletteListBoxItemStyle" TargetType="ListBoxItem">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Padding" Value="{DynamicResource PaletteItemPadding}" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource BackgroundFillColorSecondaryBrush}" />
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="{DynamicResource BackgroundFillColorSecondaryBrush}" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Item Template -->
            <DataTemplate x:Key="PaletteItemTemplate">
                <Grid ToolTip="{Binding TooltipText}">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Opacity" Value="1.0" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CanExecute}" Value="False">
                                    <Setter Property="Opacity" Value="0.4" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Icon -->
                    <Image Grid.Column="0"
                           Source="{Binding Icon}"
                           Width="16"
                           Height="16"
                           Margin="0,0,10,0"
                           VerticalAlignment="Center"
                           Opacity="0.8"
                           Visibility="{Binding Icon, Converter={StaticResource VisibilityConverter}}" />

                    <!-- Text Stack -->
                    <Grid Grid.Column="1"
                          VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                   Text="{Binding PrimaryText}"
                                   FontFamily="Segoe UI Variable"
                                   FontWeight="SemiBold"
                                   FontSize="{DynamicResource PaletteFontSizeLarge}"
                                   LineHeight="18"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   TextTrimming="CharacterEllipsis" />

                        <TextBlock Grid.Row="1"
                                   Text="{Binding SecondaryText}"
                                   FontFamily="Segoe UI Variable"
                                   FontSize="{DynamicResource PaletteFontSizeSmall}"
                                   LineHeight="14"
                                   Margin="0"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Visibility="{Binding SecondaryText, Converter={StaticResource VisibilityConverter}}"
                                   TextTrimming="CharacterEllipsis" />
                    </Grid>

                    <!-- Pill Badge (overlays text if needed) -->
                    <Border Grid.Column="2"
                            Grid.ColumnSpan="1"
                            Background="{DynamicResource BackgroundFillColorTertiaryBrush}"
                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="{DynamicResource PalettePaddingSmall}"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Visibility="{Binding PillText, Converter={StaticResource VisibilityConverter}}">
                        <TextBlock Text="{Binding PillText}"
                                   FontFamily="Segoe UI Variable"
                                   FontSize="{DynamicResource PaletteFontSizeSmall}"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    </Border>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <ListBox x:Name="ItemListBox"
             Background="{DynamicResource BackgroundFillColorPrimaryBrush}"
             BorderThickness="0"
             ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType=local:SelectableListBox}}"
             SelectedItem="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=local:SelectableListBox}, Mode=TwoWay}"
             SelectedIndex="{Binding SelectedIndex, RelativeSource={RelativeSource AncestorType=local:SelectableListBox}, Mode=TwoWay}"
             ItemContainerStyle="{StaticResource PaletteListBoxItemStyle}"
             ItemTemplate="{StaticResource PaletteItemTemplate}"
             SelectionChanged="ItemListBox_SelectionChanged"
             MouseLeftButtonUp="ItemListBox_MouseLeftButtonUp"
             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
             HorizontalContentAlignment="Stretch">
        <ListBox.Resources>
            <Style TargetType="ScrollViewer" BasedOn="{StaticResource CustomScrollViewerStyle}" />
        </ListBox.Resources>
    </ListBox>
</UserControl>